<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem
            id="external_project"
            name="Project ERP"
            parent="base.menu_main_pm"
            sequence="2"/>

        <record id="view_external_task_form" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <sheet string="Task">
                        <h1>
                            <field name="name" placeholder="Task summary..." class="oe_inline" colspan="4"/>
                        </h1>
                        <group>
                            <field name="external_user_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="external_reviewer_id"/>
                            <field name="assignee_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="model_reference" invisible="1"/>
                            <label for="task_origin"
                                attrs="{'invisible': ['|',
                                                        ('model_reference', '=', False),
                                                        ('name', '=', False)]}"/>
                            <span>
                                <field name="task_origin"
                                    attrs="{'invisible': ['|',
                                                            ('model_reference', '=', False),
                                                            ('name', '=', False)]}"/>
                                <button name="goto_document" type="object" string="Open"
                                        attrs="{'invisible': [('model_reference', '=', False)]}"
                                        class="oe_read_only" colspan="1"
                                        help="Go to the window from which the task has been defined."/>
                            </span>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Add a Description..."/>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_external_task_tree" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <tree string="External Task">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_external_task_search" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <search string="External Task">
                    <field name="name"/>
                    <filter string="Stage" context="{'group_by': 'stage_name'}" icon="terp-partner"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_external_task_kanban">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_name" >
                    <field name="name"/>
                    <field name="stage_name"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                <span class="oe_e">Ã­</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <br/>
                                </ul>
                            </div>

                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_view_external_task" model="ir.actions.act_window">
           <field name="name">External task</field>
           <field name="res_model">external.task</field>
           <field name="view_mode">kanban,tree,form</field>
           <field name="search_view_id" ref="view_external_task_search"/>
           <field name="help" type="html">
               <p>
                  Here you can view your issues
               </p>
           </field>
       </record>

       <menuitem action="action_view_external_task"
           id="menu_action_view_external_task"
           parent="external_project"
           sequence="10"/>

        <record model="ir.actions.act_window" id="task_from_elsewhere">
            <field name="name">Model to task creation</field>
            <field name="res_model">external.task</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</openerp>
