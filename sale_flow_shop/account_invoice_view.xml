<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_picking_inherit_sale" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="sale_stock.stock_picking_inherit_sale"/>
            <field name="arch" type="xml">
                <field name="sale_id" position="before">
                    <field name="shop_id"/>
                </field>
            </field>
        </record>

        <record id="invoice_form" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fiscal_position']" position="before">
                    <field name="shop_id" on_change="onchange_shop_id(type, shop_id)"
                    attrs="{'readonly': [('origin', '!=', False)], 'required': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
