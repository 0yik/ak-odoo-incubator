<odoo>

    <record id="training_tree_view" model="ir.ui.view">
        <field name="model">training</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="trainer_id"/>
                <field name="partner_id"/>
                <field name="from_date"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="training_form_view" model="ir.ui.view">
        <field name="model">training</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="trainer_id"/>
                            <field name="auditor_ids" widget="many2many_tags"/>
                            <field name="quotation_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="duration"/>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group col="4">
                        <separator string="Auditors" attrs="{'invisible': [('related_auditor_ids', '=', False)]}"/>
                        <field name="related_auditor_ids" colspan="4" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="function"/>
                                <field name="parent_id"/>
                            </tree>
                        </field>
                        <separator string="Training Content"/>
                        <field name="content" colspan="4" nolabel="1"
                               placeholder=" - here is details about the training"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="training_search_view" model="ir.ui.view">
        <field name="model">training</field>
        <field name="arch" type="xml">
            <search string="Course">
                <field name="name"/>
                <field name="trainer_id"/>
                <group expand="0" string="Group By">
                    <filter name="trainer_id" context="{'group_by':'trainer_id'}" string="Course"/>
                    <filter name="state" context="{'group_by':'state'}" string="State"/>
                    <filter name="groupby_month" context="{'group_by': 'from_date:month'}" string="Month"/>
                </group>
            </search>
        </field>
    </record>

    <record id="training_action" model="ir.actions.act_window">
        <field name="name">Training</field>
        <field name="res_model">training</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
