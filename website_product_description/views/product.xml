<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="2000"/>
        <field name="arch" type="xml">
            <xpath expr="//h1[1]" position="after">
                <label class="oe_edit_only" for="description_short"/>
                <h2><field name="description_short"/></h2>
            </xpath>
            <field name="description_sale" position="after">
                <separator string="Description for Ecommerce" colspan="4"/>
                <field name="description_website" nolabel="1"
                    placeholder="This note will be displayed on e-commerce." colspan="4"/>
            </field>
        </field>
    </record>

</odoo>
