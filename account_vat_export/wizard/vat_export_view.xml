<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="vat_export_view">
            <field name="name">vat.export.view</field>
            <field name="model">vat.export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="VAT Export">
                    <group string="Periods">
                        <field name="period_ids" nolabel="1"/>
                    </group>
                    <group col="2" colspan="4">
                        <field name="country_id"/>
                        <field name="invoice_file" filename="invoice_name" readonly="1"/>
                        <field name="refund_file" filename="refund_name" readonly="1"/>
                    </group>
                    <group col="2" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="gtk-ok" name="export_vat" string="Export" type="object"/>
                    </group>
                </form>
            </field>
        </record>

         <act_window name="VAT Export"
            res_model="vat.export"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_vat_export"/>
    </data>
</openerp>
